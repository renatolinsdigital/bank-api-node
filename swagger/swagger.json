{
  "swagger": "2.0",
  "info": {
    "description": "Bank API with CRUD functionallity",
    "version": "1.0.0",
    "title": "Bank API"
  },
  "host": "localhost:8080",
  "tags": [
    {
      "name": "account",
      "description": "Accounts management endpoint"
    }
  ],
  "paths": {
    "/account": {
      "get": {
        "tags": [
          "account"
        ],
        "summary": "Get existing accounts list",
        "description": "Get existing accounts list",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/AccountWithId"
              }
            }
          },
          "400": {
            "schema": {
              "$ref": "#/definitions/BadRequestError"
            }
          },
          "500": {
            "schema": {
              "$ref": "#/definitions/InternalError"
            }
          }
        }
      },
      "post": {
        "tags": [
          "account"
        ],
        "summary": "Create a new account",
        "description": "Create a new account",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Account object",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Account"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/AccountWithId"
            }
          },
          "400": {
            "schema": {
              "$ref": "#/definitions/BadRequestError"
            }
          },
          "500": {
            "schema": {
              "$ref": "#/definitions/InternalError"
            }
          }
        }
      },
      "put": {
        "tags": [
          "account"
        ],
        "summary": "Updates an account entirely",
        "description": "Updates an account entirely",
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Account object",
            "required": true,
            "schema": {
              "$ref": "#/definitions/AccountWithId"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Account has been fully updated"
          },
          "400": {
            "schema": {
              "$ref": "#/definitions/BadRequestError"
            }
          },
          "404": {
            "schema": {
              "$ref": "#/definitions/NotFoundError"
            }
          },
          "500": {
            "schema": {
              "$ref": "#/definitions/InternalError"
            }
          }
        }
      }
    },
    "/account/{accountId}": {
      "get": {
        "tags": [
          "account"
        ],
        "summary": "Get an existing account by Id",
        "description": "Get an existing account by Id",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "accountId",
            "in": "path",
            "description": "Account ID to be informed",
            "required": "true",
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/AccountWithId"
            }
          },
          "400": {
            "schema": {
              "$ref": "#/definitions/BadRequestError"
            }
          },
          "404": {
            "schema": {
              "$ref": "#/definitions/NotFoundError"
            }
          },
          "500": {
            "schema": {
              "$ref": "#/definitions/InternalError"
            }
          }
        }
      },
      "delete": {
        "tags": [
          "account"
        ],
        "summary": "Deletes an existing account by Id",
        "description": "Deletes an existing account by Id",
        "produces": [
          "text/plain"
        ],
        "parameters": [
          {
            "name": "accountId",
            "in": "path",
            "description": "Account ID to be informed",
            "required": "true",
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "202": {
            "description": "successful deletion",
            "schema": {
              "$ref": "#/definitions/TextResponse"
            }
          },
          "400": {
            "schema": {
              "$ref": "#/definitions/BadRequestError"
            }
          },
          "404": {
            "schema": {
              "$ref": "#/definitions/NotFoundError"
            }
          },
          "500": {
            "schema": {
              "$ref": "#/definitions/InternalError"
            }
          }
        }
      }
    },
    "/account/withdraw/{id}": {
      "patch": {
        "tags": [
          "account"
        ],
        "summary": "Withdraws from accounts",
        "description": "Withdraws from accounts",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "text/plain"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Account ID to be informed",
            "required": "true",
            "type": "integer",
            "format": "int64"
          },
          {
            "in": "body",
            "name": "amount",
            "description": "Operation amount",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Amount"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/TextResponse"
            }
          },
          "400": {
            "schema": {
              "$ref": "#/definitions/BadRequestError"
            }
          },
          "403": {
            "schema": {
              "$ref": "#/definitions/NotEnoughFunds"
            }
          },
          "404": {
            "schema": {
              "$ref": "#/definitions/NotFoundError"
            }
          }
        }
      }
    },
    "/account/deposit/{id}": {
      "patch": {
        "tags": [
          "account"
        ],
        "summary": "Deposits on accounts",
        "description": "Deposits on accounts",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "text/plain"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Account ID to be informed",
            "required": "true",
            "type": "integer",
            "format": "int64"
          },
          {
            "in": "body",
            "name": "amount",
            "description": "Operation amount",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Amount"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/TextResponse"
            }
          },
          "400": {
            "schema": {
              "$ref": "#/definitions/BadRequestError"
            }
          },
          "404": {
            "schema": {
              "$ref": "#/definitions/NotFoundError"
            }
          }
        }
      }
    },
    "/account/transfer?fromAccountWithId={fromId}&toAccountWithId={toId}": {
      "patch": {
        "tags": [
          "account"
        ],
        "summary": "Transfers between accounts",
        "description": "Transfers between accounts",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "text/plain"
        ],
        "parameters": [
          {
            "name": "fromId",
            "in": "path",
            "description": "Account ID for withdrawal",
            "required": "true",
            "type": "integer",
            "format": "int64"
          },
          {
            "name": "toId",
            "in": "path",
            "description": "Account ID for deposit",
            "required": "true",
            "type": "integer",
            "format": "int64"
          },
          {
            "in": "body",
            "name": "amount",
            "description": "Operation amount",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Amount"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/TextResponse"
            }
          },
          "400": {
            "schema": {
              "$ref": "#/definitions/BadRequestError"
            }
          },
          "403": {
            "schema": {
              "$ref": "#/definitions/NotEnoughFunds"
            }
          },
          "404": {
            "schema": {
              "$ref": "#/definitions/NotFoundError"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Account": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "example": "Renato Lins"
        },
        "balance": {
          "type": "number",
          "example": 2700.89
        }
      }
    },
    "AccountWithId": {
      "allOf": [
        {
          "type": "object",
          "required": [
            "id"
          ],
          "properties": {
            "id": {
              "type": "integer",
              "example": 1
            }
          }
        },
        {
          "$ref": "#/definitions/Account"
        }
      ]
    },
    "Amount": {
      "type": "object",
      "properties": {
        "amount": {
          "type": "number",
          "example": 120
        }
      }
    },
    "TextResponse": {
      "type": "string",
      "example": "Operation successful"
    },
    "BadRequestError": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string",
          "example": "Bad request. Check your request and try again"
        }
      }
    },
    "NotEnoughFunds": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string",
          "example": "Withdrawal error - not enough founds"
        }
      }
    },
    "InternalError": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string",
          "example": "Internal server error. Try later in a few moments"
        }
      }
    },
    "NotFoundError": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string",
          "example": "Resource not found"
        }
      }
    }
  }
}